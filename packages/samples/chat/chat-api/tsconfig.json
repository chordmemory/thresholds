{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "CommonJS",
    "target": "ES6",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "stripInternal": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "dist/types",
    "outDir": "dist/js",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "plugins": []
  },
  "include": ["./src"],
  "compileOnSave": false
}
