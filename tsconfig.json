{
  "compilerOptions": {
    "target": "ES2015",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "module": "CommonJS",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@threshold-types/*": [
        "./packages/types/*"
      ],
      "@threshold-libs/*": [
        "./packages/libs/*"
      ],
      "@threshold-apps/*": [
        "./packages/apps/*"
      ],
      "@threshold-transports/*": [
        "./packages/transports/*"
      ]
    },
    "baseUrl": "./"
  }
}